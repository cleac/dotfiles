# :vim set syntax=shell

function run() {
  $@ &
}

function run_once() {
  pgrep $@ > /dev/null || ($@ &)
}

run_once  blueman-applet
run_once  nm-applet
run_once  sh -c "sleep 1; volumeicon"
run_once  xcompmgr
run_once  redshift-gtk
run_once  albert
run_once  slack
run_once  ~/software/Telegram
run_once  unclutter -idle 1
