# :vim set syntax=shell

function run() {
  $@ &
}

function run_once() {
  pgrep $@ > /dev/null || ($@ &)
}

function vicon() {
    sleep 1
    volumeicon
}

run_once  blueman-applet
run_once  nm-applet
run_once  vicon
run_once  xcompmgr
run_once  redshift-gtk
run_once  albert
run       slack
run       ~/software/Telegram
run       xscreensaver -nosplash

